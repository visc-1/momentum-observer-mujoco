<mujoco model="ur10_scene">
  <compiler angle="radian"/>
  <option gravity="0 0 -9.81" integrator="RK4" timestep="0.001"/>
  
  <visual>
    <global offwidth="1920" offheight="1080"/>
    <quality shadowsize="4096"/>
    <map force="0.1" zfar="30"/>
  </visual>
  
  <asset>
    <texture name="grid" type="2d" builtin="checker" rgb1=".1 .2 .3" rgb2=".2 .3 .4" width="300" height="300"/>
    <material name="grid" texture="grid" texrepeat="8 8" reflectance=".2"/>
    <texture name="skybox" type="skybox" builtin="gradient" rgb1=".4 .6 .8" rgb2="0 0 0" width="800" height="800"/>
    
    <!-- UR10 meshes -->
    <mesh name="base" content_type="model/stl" file="ur10/base.stl"/>
    <mesh name="shoulder" content_type="model/stl" file="ur10/shoulder.stl"/>
    <mesh name="upperarm" content_type="model/stl" file="ur10/upperarm.stl"/>
    <mesh name="forearm" content_type="model/stl" file="ur10/forearm.stl"/>
    <mesh name="wrist1" content_type="model/stl" file="ur10/wrist1.stl"/>
    <mesh name="wrist2" content_type="model/stl" file="ur10/wrist2.stl"/>
    <mesh name="wrist3" content_type="model/stl" file="ur10/wrist3.stl"/>
  </asset>
  
  <worldbody>
    <light directional="true" ambient=".4 .4 .4" diffuse=".8 .8 .8" specular="0.1 0.1 0.1" castshadow="false" pos="0 0 4" dir="0 0 -1"/>
    <light directional="true" pos="0 0 3" dir="0 0 -1"/>
    
    <geom name="floor" size="0 0 0.05" type="plane" material="grid" condim="3"/>
    
    <body name="ur10_base" pos="0 0 0.05">
      <geom type="mesh" mesh="base"/>
      <body name="shoulder_link" pos="0 0 0.1273">
        <inertial pos="0 0 0" mass="7.778" diaginertia="0.0314743 0.0314743 0.0218756"/>
        <joint name="shoulder_pan_joint" pos="0 0 0" axis="0 0 1" range="-6.28319 6.28319" actuatorfrcrange="-330 330"/>
        <geom type="mesh" mesh="shoulder"/>
        <body name="upper_arm_link" pos="0 0.220941 0" quat="0.707107 0 0.707107 0">
          <inertial pos="0 0 0.306" mass="12.93" diaginertia="0.421754 0.421754 0.0363656"/>
          <joint name="shoulder_lift_joint" pos="0 0 0" axis="0 1 0" range="-6.28319 6.28319" actuatorfrcrange="-330 330"/>
          <geom type="mesh" mesh="upperarm"/>
          <body name="forearm_link" pos="0 -0.1197 0.61275" quat="0.707107 0 -0.707107 0">
            <inertial pos="0 0 0.28615" mass="3.87" diaginertia="0.111069 0.111069 0.010884"/>
            <joint name="elbow_joint" pos="0 0 0" axis="0 1 0" range="-6.28319 6.28319" actuatorfrcrange="-330 330"/>
            <geom type="mesh" mesh="forearm"/>
            <body name="wrist_1_link" pos="0 0 0.57155" quat="0.707107 0 0.707107 0">
              <inertial pos="0 0 0" mass="1.96" diaginertia="0.0051082 0.0051082 0.0055125"/>
              <joint name="wrist_1_joint" pos="0 0 0" axis="0 1 0" range="-6.28319 6.28319" actuatorfrcrange="-330 330"/>
              <geom type="mesh" mesh="wrist1"/>
              <body name="wrist_2_link" pos="0 0.11985 0" quat="0.707107 0 0 -0.707107">
                <inertial pos="0 0 0" mass="1.96" diaginertia="0.0051082 0.0051082 0.0055125"/>
                <joint name="wrist_2_joint" pos="0 0 0" axis="0 0 1" range="-6.28319 6.28319" actuatorfrcrange="-330 330"/>
                <geom type="mesh" mesh="wrist2"/>
                <body name="wrist_3_link" pos="0 0 0.11655">
                  <inertial pos="0 0 0" mass="0.202" diaginertia="0.000526462 0.000526462 0.000568125"/>
                  <joint name="wrist_3_joint" pos="0 0 0" axis="0 1 0" range="-6.28319 6.28319" actuatorfrcrange="-330 330"/>
                  <geom type="mesh" mesh="wrist3"/>
                  <body name="ee_link" pos="0 0.0922 0" quat="0.707107 0 0 0.707107"/>
                </body>
              </body>
            </body>
          </body>
        </body>
      </body>
    </body>
  </worldbody>

  <actuator>
    <motor name="shoulder_pan" joint="shoulder_pan_joint" ctrllimited="true" ctrlrange="-330 330"/>
    <motor name="shoulder_lift" joint="shoulder_lift_joint" ctrllimited="true" ctrlrange="-330 330"/>
    <motor name="elbow" joint="elbow_joint" ctrllimited="true" ctrlrange="-330 330"/>
    <motor name="wrist_1" joint="wrist_1_joint" ctrllimited="true" ctrlrange="-330 330"/>
    <motor name="wrist_2" joint="wrist_2_joint" ctrllimited="true" ctrlrange="-330 330"/>
    <motor name="wrist_3" joint="wrist_3_joint" ctrllimited="true" ctrlrange="-330 330"/>
  </actuator>
</mujoco>
